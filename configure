#!/usr/bin/env bash
if [[ -x Makefile ]]; then
    rm -r Makefile
fi
if [[ -x out ]]; then
    rm -r out
fi

if type -p java > /dev/null; then
    echo JAVA=java > Makefile
    JAVA=java
elif [[ -n "$JAVA_HOME" ]] && [[ -x "$JAVA_HOME/bin/java" ]]; then
    echo JAVA="$JAVA_HOME/bin/java" > Makefile
    JAVA="$JAVA_HOME/bin/java"
else
    echo "No java installation found!"
    exit
fi

if type -p javac > /dev/null; then
    echo JAVAC=javac >> Makefile
    JAVAC=javac
elif [[ -n "$JAVA_HOME" ]] && [[ -x "$JAVA_HOME/bin/javac" ]]; then
    echo JAVAC="$JAVA_HOME/bin/javac" >> Makefile
    JAVAC="$JAVA_HOME/bin/javac"
else
    echo "Java install is not a JDK!"
    exit
fi

if [[ "$JAVA" ]]; then
    version=$("$JAVA" -version 2>&1 | awk -F '"' '/version/ {print $2}')
    echo Java version "$version"
fi

mkdir out

FILES=""

find . -iname '*.java' -exec sh -c "echo \".PHONY: {}\n{}: \n\t\\\$(JAVAC) {} -o out/{} Makefile\" >> Makefile; FILES=\"$FILES{} \"" \;

echo $FILES

echo "all: $FILES" >> Makefile

echo Done!
